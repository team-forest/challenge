<div id="modal">
    <a class="close-modal" href="#">X</a>
    <section class="card friend-list">
      <h6>Send challenge to Friends</h6>
      <p class="challenge easy"><em>Easy</em> Do 3 Sit-ups!</p>
      <div class="friends">
        <ul>
        <% @friends.each do |friend| %>
            <% if friend.present? %>
              <li>
              <p class="send-challenge" data-user-id='<%= friend['id'] %>'>
                <%= friend['name'] %></p>
              <a href="#">Challenge</a>
              </a>
              </li>
            <% end %>
          <% end %>
       </ul>
      </div>
    </section>
  </div>
